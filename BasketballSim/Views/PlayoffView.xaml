<Window x:Class="BasketballSim.Views.PlayoffView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None"
        WindowState="Maximized"
        ResizeMode="NoResize"
        Title="Playoffs">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <StackPanel x:Name="Round1Panel" Grid.Column="0" Margin="20"/>
        <StackPanel x:Name="Round2Panel" Grid.Column="1" Margin="20"/>
        <StackPanel x:Name="Round3Panel" Grid.Column="2" Margin="20"/>
        <StackPanel x:Name="ChampionPanel" Grid.Column="3" Margin="20"/>
    </Grid>
</Window>