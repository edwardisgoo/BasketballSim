<Window x:Class="BasketballSim.Views.StandingsView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None"
        WindowState="Maximized"
        ResizeMode="NoResize"
        Title="Standings">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0">
            <TextBlock Text="West" FontSize="24" FontWeight="Bold" Margin="0,0,0,10"/>
            <ListBox x:Name="WestList"/>
        </StackPanel>

        <StackPanel Grid.Column="1">
            <TextBlock Text="East" FontSize="24" FontWeight="Bold" Margin="0,0,0,10"/>
            <ListBox x:Name="EastList"/>
        </StackPanel>

        <Button Grid.Row="1" Grid.ColumnSpan="2" Content="View Playoffs" Width="150" Height="40" Margin="0,20,0,0" HorizontalAlignment="Center" Click="ViewPlayoffs_Click"/>
    </Grid>
</Window>